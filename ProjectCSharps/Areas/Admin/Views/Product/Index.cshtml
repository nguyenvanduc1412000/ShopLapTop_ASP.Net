@model IEnumerable<ProjectCSharps.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .table{
      margin-left:20px;
      margin-top:20px;
    }
</style>

<table class="table" >
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.name_pro)*@
            Name_Product
        </th>
       
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>
        <th>
            Supplier
        </th>
        
       
        <th>
            Name_Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name_pro)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.category.name_cat)
        </td>
        <td>
            @Html.ActionLink("Create New", "Create")|
            @Html.ActionLink("Edit", "Edit", new { id = item.id_pro }) |
            @Html.ActionLink("Details", "Details", new { id = item.id_pro }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id_pro })


        </td>
    </tr>
}

</table>
